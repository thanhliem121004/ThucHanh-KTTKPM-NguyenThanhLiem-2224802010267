﻿
@page
@model ASC.Web.Areas.Identity.Pages.Account.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="text-center mb-4 mt-5">
                <h2>@ViewData["Title"]</h2>
            </div>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <input asp-for="Input.Code" type="hidden" />
                <div class="mb-4">
                    <input asp-for="Input.Email" class="form-control form-control-lg border-0 border-bottom rounded-0"
                           placeholder="Email" autocomplete="username" aria-required="true" />
                </div>
                <div class="mb-4">
                    <input asp-for="Input.Password" type="password" class="form-control form-control-lg border-0 border-bottom rounded-0"
                           placeholder="Password" autocomplete="new-password" aria-required="true" />
                </div>
                <div class="mb-4">
                    <input asp-for="Input.ConfirmPassword" type="password" class="form-control form-control-lg border-0 border-bottom rounded-0"
                           placeholder="Confirm Password" autocomplete="new-password" aria-required="true" />
                </div>
                <div class="text-center mt-5">
                    <button type="submit" class="btn btn-primary px-5">Reset</button>
                </div>
            </form>
        </div>
    </div>
</div>
<style>
    .form-control {
        padding: 1rem 0.25rem;
    }

        .form-control:focus {
            box-shadow: none;
            border-color: #0d6efd;
        }
</style>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}